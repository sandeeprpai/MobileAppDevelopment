<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobDev.Views.DBDumpPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Button Text="Drop Monster Table"
                    Clicked="OnDeleteMonsterClicked" HorizontalOptions="Start" />
            <Button Text="Drop Player Table"
                    Clicked="OnDeletePlayerClicked" HorizontalOptions="Start" />
            <Button Text="Drop Items Table"
                    Clicked="OnDeleteItemClicked" HorizontalOptions="Start" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>