        <Entry Text="{Binding Speed}"/>
        <Entry Text="{Binding HP}"/>
        <Entry Text="{Binding Strength}"/>
        <Entry Text="{Binding characterAttackLevel}"/>
        <Entry Text="{Binding characterItemBonus}"/>
        <Button Text="Save"
                Clicked="OnSaveClick" HorizontalOptions="Start" />
